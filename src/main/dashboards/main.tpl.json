{
    "widgets": [
        {
            "height": 6,
            "width": 6,
            "y": 1,
            "x": 0,
            "type": "metric",
            "properties": {
                "metrics": [
                    [ "AWS/ApiGateway", "Count", "ApiName", "${tokenizer_api_name}", "Stage", "v1" ]
                ],
                "period": 300,
                "stat": "Sum",
                "region": "eu-south-1",
                "view": "timeSeries",
                "stacked": false,
                "title": "Api calls"
            }
        },
        {
            "height": 6,
            "width": 6,
            "y": 1,
            "x": 6,
            "type": "metric",
            "properties": {
                "metrics": [
                    [ { "expression": "ANOMALY_DETECTION_BAND(m1, 2)", "label": "AnomalyDetection", "id": "e1" } ],
                    [ "AWS/ApiGateway", "Latency", "ApiName", "${tokenizer_api_name}", "Stage", "v1", { "id": "m1" } ]
                ],
                "period": 300,
                "stat": "Average",
                "region": "eu-south-1",
                "view": "timeSeries",
                "stacked": false,
                "title": "Latency (ms)"
            }
        },
        {
            "height": 6,
            "width": 6,
            "y": 1,
            "x": 12,
            "type": "metric",
            "properties": {
                "view": "timeSeries",
                "stacked": false,
                "metrics": [
                    [ "AWS/ApiGateway", "5XXError", "ApiName", "${tokenizer_api_name}" ],
                    [ ".", "4XXError", ".", "." ]
                ],
                "region": "eu-south-1"
            }
        },
        {
            "height": 6,
            "width": 6,
            "y": 1,
            "x": 18,
            "type": "metric",
            "properties": {
                "view": "timeSeries",
                "stacked": false,
                "metrics": [
                    [ "AWS/NetworkELB", "UnHealthyHostCount", "TargetGroup", "${nlb_target_arn_suffix}", "LoadBalancer", "${nlb_arn_suffix}" ],
                    [ ".", "HealthyHostCount", ".", ".", ".", "." ]
                ],
                "region": "eu-south-1",
                "period": 300,
                "title": "Backend target health status"
            }
        },
        {
            "height": 1,
            "width": 24,
            "y": 11,
            "x": 0,
            "type": "text",
            "properties": {
                "markdown": "## Backend (ECS Fargate)\n"
            }
        },
        {
            "height": 6,
            "width": 12,
            "y": 12,
            "x": 0,
            "type": "metric",
            "properties": {
                "metrics": [
                    [ { "expression": "ANOMALY_DETECTION_BAND(m1, 2)", "label": "AnomalyDetection", "id": "e1", "region": "eu-south-1" } ],
                    [ "AWS/ECS", "CPUUtilization", "ServiceName", "${ecs_tokenizer_service}", "ClusterName", "${ecs_cluster_name}", { "stat": "Minimum", "id": "m1" } ],
                    [ "...", { "stat": "Maximum", "id": "m2" } ],
                    [ "...", { "id": "m3" } ]
                ],
                "period": 300,
                "region": "eu-south-1",
                "stacked": false,
                "title": "CPU utilization",
                "view": "timeSeries",
                "stat": "Average"
            }
        },
        {
            "height": 6,
            "width": 12,
            "y": 12,
            "x": 12,
            "type": "metric",
            "properties": {
                "metrics": [
                    [ { "expression": "ANOMALY_DETECTION_BAND(m1, 2)", "label": "AnomalyDetection", "id": "e1" } ],
                    [ "AWS/ECS", "MemoryUtilization", "ServiceName", "${ecs_tokenizer_service}", "ClusterName", "${ecs_cluster_name}", { "stat": "Minimum", "id": "m1" } ],
                    [ "...", { "stat": "Maximum", "id": "m2" } ],
                    [ "...", { "id": "m3" } ]
                ],
                "period": 300,
                "region": "eu-south-1",
                "stacked": false,
                "title": "Memory utilization",
                "view": "timeSeries",
                "stat": "Average"
            }
        },
        {
            "height": 1,
            "width": 24,
            "y": 18,
            "x": 0,
            "type": "text",
            "properties": {
                "markdown": "## Database (Dynamodb)\n"
            }
        },
        {
            "height": 6,
            "width": 6,
            "y": 19,
            "x": 0,
            "type": "metric",
            "properties": {
                "metrics": [
                    [ "AWS/DynamoDB", "ProvisionedReadCapacityUnits", "TableName", "Token", { "label": "Provisioned", "color": "#E02020" } ],
