                    [ { "expression": "m1/PERIOD(m1)", "label": "Consumed", "id": "e1", "color": "#0073BB", "region": "eu-south-1" } ]
                ],
                "title": "Read usage (average units/second)",
                "view": "timeSeries",
                "stacked": false,
                "region": "eu-south-1",
                "stat": "Average",
                "period": 60,
                "yAxis": {
                    "left": {
                        "showUnits": false
                    }
