        {
            "height": 1,
            "width": 24,
            "y": 0,
            "x": 0,
            "type": "text",
            "properties": {
                "markdown": "## Api Tokenizer \n"
            }
        },
        {
            "height": 4,
            "width": 6,
            "y": 7,
            "x": 0,
            "type": "log",
            "properties": {
                "query": "SOURCE 'API-Gateway-Execution-Logs_${tokenizer_api_id}/${tokenizer_api_state_name}' | fields @timestamp, @message\n| parse @message \"Plan ID *,\" as plan\n| filter @message like 'exceeded throttle limit'\n| stats count(*) as Tot by plan",
                "region": "eu-south-1",
                "stacked": false,
                "view": "table",
                "title": "Count rate limit exceeded by plan"
            }
        },
        {
            "height": 4,
            "width": 18,
            "y": 7,
            "x": 6,
            "type": "metric",
            "properties": {
                "metrics": [
                    [ "AWS/WAFV2", "CountedRequests", "Region", "eu-south-1", "Rule", "IpReputationList", "WebACL", "${waf_web_acl}" ],
                    [ "...", "CommonRuleSet", ".", "." ],
                    [ "...", "KnownBadInputsRuleSet", ".", "." ],
                    [ "...", "SQLiRuleSet", ".", "." ],
                    [ "...", "ALL", ".", ".", { "visible": false } ],
                    [ ".", "AllowedRequests", ".", ".", ".", "${waf_web_acl}", ".", ".", { "visible": false } ]
                ],
                "stat": "Sum",
                "view": "timeSeries",
                "stacked": false,
                "region": "eu-south-1",
                "title": "Web Acl Rule violation count ",
                "yAxis": {
                    "left": {
                        "showUnits": false
                    },
                    "right": {
                        "showUnits": false
                    }
                },
                "period": 300
            }
        },
